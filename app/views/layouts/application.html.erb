<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/f253770af7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
          <li class="nav-link text-light">
             <%= link_to "Bookers", root_path, class:"nav-link text-light" %>
          </li>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>


        <% if user_signed_in? %>
        <div class="collapse navbar-collapse">
         <ul class="navbar-nav ml-auto">
            <%= link_to user_path(current_user.id), class:"nav-link text-light" do %>
            <i class="fa-solid fa-house-chimney"></i>
            Home
            <% end %>

            <%= link_to users_path, class:"nav-link text-light" do %>
            <i class="fa-solid fa-users"></i>
            User
            <% end %>

             <%= link_to books_path, class:"nav-link text-light" do %>
             <i class="fa-solid fa-book-open"></i>
             Books
             <% end %>

             <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light" do %>
             <i class="fa-solid fa-right-from-bracket"></i>
             Log out
             <% end %>
          <% else %>

          <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
            </button>

             <%= link_to root_path, class:"nav-link text-light" do %>
             <i class="fa-solid fa-house-chimney"></i>
             Home
             <% end %>

             <%= link_to about_path, class:"nav-link text-light" do %>
             <i class="fa-solid fa-link"></i>
             About
             <% end %>

             <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
             <i class="fa-solid fa-user-plus"></i>
             Sgin up
             <% end %>

              <%= link_to new_user_session_path, class:"nav-link text-light" do %>
              <i class="fa-solid fa-right-to-bracket"></i>
              Log in
              <% end %>
           <% end %>
        </ul>
      </div>
     </nav>
    </header>
    <%= yield %>


    <footer>
      <div class="container mt-5">
  	   <div class="row">
    	  <div class="mx-auto">
    	 	 <p>CopyRight Infratop.inc</p>
    	  </div>
       </div>
       </div>
    </footer>
  </body>
</html>

