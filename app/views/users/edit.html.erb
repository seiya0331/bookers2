<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="form-group"></
      <label for="user_name">Name</label><br>
       <%= f.text_field :name, autofocus: true, id:"user_name" %>
      </div>
      <div class="form-group">
      <label for="user_Image">Image</label><br>
       <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
      <label for="user_introduction">Introduction</label><br>
      <%= f.text_area :introduction, aotofocus: true, id:"user_introduction" %>
      </div>
       <%= f.submit "Update User", class:"btn btn-secondary" %>
      <% end %>

    </div>
   </div>
  </div>
</main>