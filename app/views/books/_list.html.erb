<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
     <h2>User info</h2>
      <%= image_tag user.get_profile_image %>
      <table class="table">
       <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>

          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>

          <tr>
           <th>フォロー数: <%= user.followings.count %></th>
          </tr>

          <tr>
           <th>フォロワー数: <%= user.followers.count %></th>
          </tr>
       </tbody>
      </table>
      <div class="row">
          <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block edit_user_127766" do %>
           <i class="fas fa-user-cog"></i>
          <% end %>
      </div>



       <h2 class="mt-3">New book</h2>
       <%= form_with model: book do |f| %>

       <h4 for="book_title">Title</h4>
        <%= f.text_field :title %>

         <h4 for="book_opinion">Opinion</h4>
          <%= f.text_area :body %>

          <%= f.submit 'Create Book', class:"btn btn-success" %>
          <% end %>
         </div>
