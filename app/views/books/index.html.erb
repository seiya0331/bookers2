
<% if @book.errors.any? %>
   <%= @book.errors.count %>件のエラーが発生しました
   <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
<% end %>
<%= render 'list', book: @book, user: @user %>

       <div class="col-md-8 offset-md-1">

        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
           <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
             </tr>
          </thead>
          <tbody>
         <% @books.each do |book| %>
         <tr>
           <%= link_to book_path(book.id) do %>
           <td>
            <%= image_tag book.user.get_image %>
           </td>
           <td>
           <%= book.title %>
           </td>
           <td>
           <%= book.body %>
           </td>
           <% end %>

         </tr>
       <% end %>
       </tbody>
      </table>
    </div>
