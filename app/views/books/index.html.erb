<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
     <h2>User info</h2>
      <%= image_tag @user.get_image %>
      <table class="table">
       <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>

          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
       </tbody>
      </table>
      <div class="row">
          <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block edit_user_127766" do %>
           <i class="fa-solid fa-user-gear"></i>
          <% end %>
      </div>



       <h2 class="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>

       <h4 for="book_title">Title</h4>
        <%= f.text_field :title %>

         <h4 for="book_opinion">Opinion</h4>
          <%= f.text_area :body %>

          <%= f.submit 'Create Book', class:"btn btn-success" %>
          <% end %>
         </div>
       <div class="col-md-8 offset-md-1">

        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
           <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
             </tr>
          </thead>
          <tbody>
         <% @books.each do |book| %>
         <tr>
           <%= link_to book_path(book.id) do %>
           <td>
           <%= image_tag book.user.get_image %>
           </td>
           <td>
           <%= book.title %>
           </td>
           <td>
           <%= book.body %>
           </td>
           <% end %>

         </tr>
       <% end %>
       </tbody>
      </table>
    </div>
   </div>
  </div>



</main>
